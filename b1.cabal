  default-language:    Haskell2010

executable b1-prices
  hs-source-dirs:
                     src
  main-is:           B1/Program/Prices/Main.hs
  ghc-options:      -main-is B1.Program.Prices.Main -threaded -O2
  build-depends:
                     base       ^>=4.12.0.0
                   , HTTP       ^>=4000.3.14
                   , old-locale ^>=1.0.0.7
                   , time       ^>=1.8.0.2
  other-modules:
                     B1.Control.TaskManager
                   , B1.Data.List
                   , B1.Data.Price
                   , B1.Data.Price.Google
                   , B1.Data.Price.Mock
                   , B1.Data.String.Utils
